pub fn max_coins(piles: Vec<i32>) -> i32 {
    let mut pp=piles.clone();
    pp.sort();
    let l=2*(pp.len()/3);
    let mut it=pp.into_iter().rev().take(l);
    it.next();

    let mut sum:i32=0;

    loop{
        match it.next(){
            Some(x)=>{
                sum+=x;
                it.next();
            }
            None=>{
                return sum;
            }
        }
    }
}

